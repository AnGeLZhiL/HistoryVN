<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/information_item">
        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_news"
            android:gravity="center"
            android:fontFamily="@font/vollkorn_bold"
            android:padding="15dp"
            android:text="Заголовокs"
            android:textColor="@color/dark_brown"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vollkorn_bold"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:text="@string/location"
            android:textColor="@color/dark_brown"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_news"
            android:fontFamily="@font/vollkorn_bold"
            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:text="text"
            android:textColor="@color/dark_brown"
            android:textSize="20sp"  />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingHorizontal="15dp"
            android:layout_below="@+id/inf_news"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitCenter"
            android:paddingBottom="20dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>