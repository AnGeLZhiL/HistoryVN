<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/user">
    <fragment
        android:id="@+id/informations"
        android:name="com.example.historyvn.fragment.FragmentInformations"
        android:label="fragment_informations"
        tools:layout="@layout/fragment_informations">
        <action
            android:id="@+id/action_informations_to_objectsFragment2"
            app:destination="@id/objectsFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/informations"
            app:popUpToInclusive="true">
            <argument
                android:name="CategoryId"
                android:defaultValue="-1" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/tests"
        android:name="com.example.historyvn.fragment.FragmentTests"
        android:label="fragment_tests"
        tools:layout="@layout/fragment_tests">
        <action
            android:id="@+id/action_tests_to_testsListFragment"
            app:destination="@id/testsListFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/tests" />
    </fragment>
    <fragment
        android:id="@+id/user"
        android:name="com.example.historyvn.fragment.FragmentUser"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
    <fragment
        android:id="@+id/objectsFragment"
        android:name="com.example.historyvn.fragment.ObjectsFragment"
        android:label="fragment_objects"
        tools:layout="@layout/fragment_objects">
        <argument
            android:name="CategoryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/testsListFragment"
        android:name="com.example.historyvn.fragment.TestsListFragment"
        android:label="fragment_tests_list"
        tools:layout="@layout/fragment_tests_list">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <action
            android:id="@+id/action_testsListFragment_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:popUpTo="@id/testsListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.example.historyvn.fragment.QuestionsFragment"
        android:label="questions_fragment"
        tools:layout="@layout/questions_fragment">
        <argument
            android:name="testId"
            app:argType="integer" />
    </fragment>
</navigation>